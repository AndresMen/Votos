<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".votos_fragment"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
        android:id="@+id/editTextrec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del recinto"
        android:inputType="none"
        android:clickable="true"
        android:focusable="false"
        android:layout_weight="1"/>
    <EditText
        android:id="@+id/editTextmesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mesa"
        android:inputType="none"
        android:clickable="true"
        android:focusable="false"
        android:layout_weight="1"/>
</LinearLayout>
    <TableLayout  android:layout_width="match_parent" android:layout_height="wrap_content"
        android:stretchColumns="1">


        <TableRow>
            <TextView android:layout_width="match_parent"
                android:text="SI"
                android:background="#128675"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_span="1"/>
            <EditText
                android:id="@+id/edtsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cad4d3"
                android:hint="0"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:layout_span="2"
                android:inputType="number"/>
        </TableRow>
        <View android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/white"/>
        <TableRow>
            <TextView android:layout_width="match_parent"
                android:text="NO"
                android:background="#128675"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_span="1"/>
            <EditText
                android:id="@+id/edtno"
                android:layout_width="match_parent"
                android:background="#cad4d3"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:layout_span="2"
                android:hint="0"
                android:inputType="number"/>
        </TableRow>
        <View android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/white"/>
        <TableRow>
            <TextView android:layout_width="match_parent"
                android:text="NULO"
                android:background="#128675"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_span="1"/>
            <EditText
                android:id="@+id/edtnulo"
                android:layout_width="match_parent"
                android:background="#cad4d3"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:layout_span="2"
                android:hint="0"
                android:inputType="number"/>
        </TableRow>
        <View android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/white"/>
        <TableRow>
            <TextView android:layout_width="match_parent"
                android:text="BLANCO"
                android:background="#128675"
                android:textColor="@color/white"
                android:padding="5dp"
                android:layout_span="1"/>
            <EditText
                android:id="@+id/edtbla"
                android:layout_width="match_parent"
                android:background="#cad4d3"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:layout_span="2"
                android:hint="0"
                android:inputType="number"/>
        </TableRow>
        <View android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/white"/>

    </TableLayout>

<Button
    android:id="@+id/env"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Enviar"
    android:layout_gravity="end"/>
</LinearLayout>